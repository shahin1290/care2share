.container

    .header

        .header_text
            #tagline
                %p Fundraising for the people 
                %p and causes you care about
                %br
            #sub_text
                %p Get started today.
            %p#campaign_button= link_to 'Start a Campaign', new_campaign_path

    .campaigns

        %h1#campaign_header Top fundraisers

        .campaign_cards
            - @campaigns.each do |campaign|
                .card
                    %p.campaign_img i
                    %p.card_title= link_to "#{campaign.title}", campaign
                    %p.card_amount Amount Raised: #{campaign.amount_raised}
                    %p.card_story Story: #{campaign.description}

